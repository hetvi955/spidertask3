{{# if products}}
<div class="row">
    <div class="col-sm-6 col-md-4">
        <ul class='list-group'>
            {{# each products }}
                <li class="list-group-item">
                <span  class='badge' style="margin-right: 40px; background:darkblue; color:whitesmoke; padding: 6px;">
                    {{this.quantity}}
                </span>
                <strong style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 30px">{{this.item.title}}</strong>
                <span class="label" style="float: right; padding-top:10px"> Total price: ${{this.price}}</span>   
            </li>
            {{/each}}
            
        </ul>
    </div>
</div>
<br>
<div style='font-size:25px;color:rgb(99, 99, 99); font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;'>Total cart collection: {{this.totalmoney}} </div>
{{ else}}
<div style="align-self:center; font-size: 30px; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif"><p>no items in cart :(</p></div>
{{/if}}
