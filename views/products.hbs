{{> navbar}}
<br><br>

{{#if items }}
  <div class='row'>
    {{#each items }}
      <div class="col-sm-6 col-md-4">
      <div class="card">
      <img src="{{ this.image}}" class="img-responsive" alt="...">
      <div class="card-body">
      <h5 class="card-title">{{ this.title}}</h5>
      <p class="card-text">{{ this.description}}</p>
      <div class='price'>${{ this.price}}</div>
      <a href="/addnew/{{this._id}}" class='btn btn-success' role='button'>Add to cart!</a>
      <br>
      <br>
      <div style="color: darkcyan;">{{ this.category}}</div>
        
    </div>
    </div>
    </div>
    {{/each}}
    </div>
{{/if}} 