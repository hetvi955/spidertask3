
{{> navbar}}
<br><br>

{{#if items }}
  <div class='row'>
    {{#each items }}
      <div class="col-sm-6 col-md-4">
        
      <div class="card">
      <img src="{{ this.image}}" class="img-responsive" alt="...">
      <div class="card-body">
      <h5 class="card-title">{{ this.title}}</h5>

      <p class="card-text">{{ this.description}}</p>
      <div class='price'>${{ this.price}}</div>
      <a href="/addnew/{{this._id}}" class='btn btn-success' role='button'>Add to cart</a>
      <a href="/order/{{this._id}}" class='btn btn-primary' role='button' style='margin-right:4px'>Order now!</a>
      <br>
      <br>
      <div style="color: darkcyan;">Category: {{ this.category}}</div>
      <div  style="color: darkcyan;">In stock: {{this.quantity}}</div>
        
    </div>
    </div>
    </div>
    {{/each}}
    </div>
{{/if}} 
